ngx_addon_name=ngx_http_sayplease_module

# Check for database selection
have_sqlite=no
have_duckdb=no

if [ -n "$SAYPLEASE_USE_DUCKDB" ]; then
    have_duckdb=yes
else
    have_sqlite=yes
fi

# Configure module
if test -n "$ngx_module_link"; then
    ngx_module_type=HTTP
    ngx_module_name=ngx_http_sayplease_module
    ngx_module_srcs="$ngx_addon_dir/ngx_http_sayplease_module.c"
    
    if [ "$have_duckdb" = "yes" ]; then
        ngx_module_libs="-lduckdb"
        ngx_module_deps="$ngx_addon_dir/duckdb.h"
        CFLAGS="$CFLAGS -DSAYPLEASE_USE_DUCKDB"
    else
        ngx_module_libs="-lsqlite3"
        CFLAGS="$CFLAGS -DSAYPLEASE_USE_SQLITE"
    fi

    . auto/module
else
    HTTP_MODULES="$HTTP_MODULES ngx_http_sayplease_module"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_sayplease_module.c"
    
    if [ "$have_duckdb" = "yes" ]; then
        CORE_LIBS="$CORE_LIBS -lduckdb"
        CFLAGS="$CFLAGS -DSAYPLEASE_USE_DUCKDB"
    else
        CORE_LIBS="$CORE_LIBS -lsqlite3"
        CFLAGS="$CFLAGS -DSAYPLEASE_USE_SQLITE"
    fi
fi 